# Application identity, environment and base address.

# APP_NAME: application identifier used in logs/metadata; any string.
APP_NAME=LPwork
# APP_VERSION: version label shown in diagnostics; free-form string.
APP_VERSION=0.0.1
# APP_ENV: environment mode (dev/prod/test) controlling debug/safety switches.
APP_ENV=dev
# APP_TIMEZONE: default timezone (PSR-20/Carbon), e.g. UTC or Europe/Warsaw; aliases allowed; empty falls back to UTC.
APP_TIMEZONE=UTC
# APP_LOCALE: default locale/language, e.g. en or pl.
APP_LOCALE=en
# APP_SCHEME: base protocol for URL generation (http or https).
APP_SCHEME=http
# APP_URL: full base URL with host and port, e.g. http://localhost:8080.
APP_URL=http://localhost:8080

# PHP runtime settings affecting logging and limits.

# PHP_ERROR_LOG: absolute path to PHP error log file; empty uses php.ini defaults.
PHP_ERROR_LOG=
# PHP_ERROR_REPORTING: error reporting level, e.g. E_ALL or E_ALL & ~E_NOTICE.
PHP_ERROR_REPORTING=E_ALL
# PHP_MEMORY_LIMIT: memory limit, e.g. 256M; -1 disables the limit.
PHP_MEMORY_LIMIT=-1
# PHP_MAX_EXECUTION_TIME: execution time limit in seconds; 0 disables the limit.
PHP_MAX_EXECUTION_TIME=0

# Default database connection for Doctrine DBAL.

# DB_DRIVER: DBAL driver name, e.g. pdo_sqlite, pdo_mysql, pdo_pgsql.
DB_DRIVER=pdo_sqlite
# DB_HOST: database host for network drivers (ignored for SQLite).
DB_HOST=127.0.0.1
# DB_PORT: database port for network drivers (ignored for SQLite).
DB_PORT=3306
# DB_DATABASE: database/schema name for network drivers.
DB_DATABASE=
# DB_USERNAME: database username for network drivers.
DB_USERNAME=
# DB_PASSWORD: database password for network drivers.
DB_PASSWORD=
# DB_PATH: SQLite database path or DSN/host for other drivers.
DB_PATH=storage/db.sqlite3
# DB_CHARSET: character set for supported drivers, e.g. utf8mb4.
DB_CHARSET=utf8mb4

# Filesystem storage settings for the local disk.

# FILESYSTEM_LOCAL_ROOT: root directory for the local filesystem driver.
FILESYSTEM_LOCAL_ROOT=storage

# Redis default connection used by Redis-backed components.

# REDIS_SCHEME: connection scheme, typically tcp or unix.
REDIS_SCHEME=tcp
# REDIS_HOST: Redis host or socket path (when using unix scheme).
REDIS_HOST=127.0.0.1
# REDIS_PORT: Redis port (ignored for unix sockets).
REDIS_PORT=6379
# REDIS_DB: logical Redis database index (0-15 by default).
REDIS_DB=0
# REDIS_USERNAME: Redis username for ACL-enabled servers; empty if unused.
REDIS_USERNAME=
# REDIS_PASSWORD: Redis password/token; empty if no auth.
REDIS_PASSWORD=
# REDIS_PREFIX: key prefix applied by Predis; can stay empty.
REDIS_PREFIX=

# Session configuration: driver selection, cookie policy and storage backends.

# SESSION_DRIVER: active session driver (php, redis, database, filesystem).
SESSION_DRIVER=php
# SESSION_LIFETIME: session lifetime in seconds (cookie Max-Age and storage TTL).
SESSION_LIFETIME=7200
# SESSION_COOKIE_NAME: cookie name carrying the session ID.
SESSION_COOKIE_NAME=LPWORKSESSID
# SESSION_COOKIE_PATH: cookie path scope, typically /.
SESSION_COOKIE_PATH=/
# SESSION_COOKIE_DOMAIN: cookie domain scope; empty for current host.
SESSION_COOKIE_DOMAIN=
# SESSION_COOKIE_SECURE: set secure flag; always forced for HTTPS requests.
SESSION_COOKIE_SECURE=false
# SESSION_COOKIE_HTTP_ONLY: set HttpOnly flag to hide cookie from JS.
SESSION_COOKIE_HTTP_ONLY=true
# SESSION_COOKIE_SAMESITE: SameSite policy (lax/strict/none).
SESSION_COOKIE_SAMESITE=lax
# SESSION_PHP_NAME: native PHP session name when using php driver.
SESSION_PHP_NAME=LPWORKSESSID
# SESSION_REDIS_CONNECTION: Redis connection name for redis session driver.
SESSION_REDIS_CONNECTION=default
# SESSION_REDIS_PREFIX: key prefix for Redis session keys.
SESSION_REDIS_PREFIX=session:
# SESSION_DB_CONNECTION: database connection name for DB session driver (must be default).
SESSION_DB_CONNECTION=default
# SESSION_DB_TABLE: table name storing sessions for DB driver.
SESSION_DB_TABLE=sessions
# SESSION_FILESYSTEM_DISK: filesystem disk name for filesystem session driver.
SESSION_FILESYSTEM_DISK=local
# SESSION_FILESYSTEM_PATH: directory on the disk for session files.
SESSION_FILESYSTEM_PATH=sessions

# Error log configuration: driver selection and storage options.

# ERROR_LOG_DRIVER: error log backend (file, redis, database).
ERROR_LOG_DRIVER=file
# ERROR_LOG_LEVEL: severity filter (reserved, all treated as error for now).
ERROR_LOG_LEVEL=error
# ERROR_LOG_FILE_MODE: file rotation mode (single, daily, monthly).
ERROR_LOG_FILE_MODE=daily
# ERROR_LOG_FILE_DIRECTORY: directory for error log files.
ERROR_LOG_FILE_DIRECTORY=errors
# ERROR_LOG_DB_CONNECTION: database connection name for error log (default recommended).
ERROR_LOG_DB_CONNECTION=default
# ERROR_LOG_DB_TABLE: table name for error log entries.
ERROR_LOG_DB_TABLE=errors
# ERROR_LOG_REDIS_CONNECTION: Redis connection name for error log entries.
ERROR_LOG_REDIS_CONNECTION=default
# ERROR_LOG_REDIS_PREFIX: Redis key prefix/list name for error log entries.
ERROR_LOG_REDIS_PREFIX=errors:
# ERROR_LOG_REDIS_TTL: TTL in seconds for Redis-stored entries (0 = no expiry).
ERROR_LOG_REDIS_TTL=0
# ERROR_LOG_REDIS_MAX_ENTRIES: max list length (trim) for Redis entries (0 = no limit).
ERROR_LOG_REDIS_MAX_ENTRIES=1000
